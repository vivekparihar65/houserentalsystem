                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Rent Price -->
                    <TextView
                        android:id="@+id/post_rent_price"
                        android:text="RS 15,000 /month"
                        android:textSize="@dimen/space_20dp"
                        android:layout_gravity="left"
                        android:paddingRight="20dp"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_round_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Address -->
                    <TextView
                        android:id="@+id/post_address"
                        android:textSize="@dimen/space_16dp"
                        android:text="AB 13/2, ABC, XYZ, dehradun-120600"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>

                    <!-- Bed, Bath, Size -->
                    <TextView
                        android:id="@+id/post_bed_bath_size"
                        android:textSize="@dimen/space_16dp"
                        android:text="4 Beds, 3 Baths, 1200 (sq.ft)"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Share -->
