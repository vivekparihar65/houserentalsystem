                    android:layout_width="@dimen/space_140dp"
                    android:layout_height="@dimen/space_140dp"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/customborder2"
                    android:contentDescription="@string/nav_header_desc"
                    android:src="@drawable/ic_for_rent_signage"
                    app:civ_border_color="@color/colorLighterGrey"
                    app:civ_border_width="@dimen/space_1dp" />


